; Recevies the following stack:
; return address
; recevied string
; empty space for new string output

nextArgCmd: mov r1, -(sp)
            mov 4(sp), r1

NAloop:     cmpb (r1), #'&
            beq NAamper
            cmpb (r1), #'@
            beq NAsht
            inc r1
            br NAloop
NAamper:    mov r1, 6(sp)
            inc 6(sp)
            br NAend

NAsht:      mov r1, 6(sp)
NAend:      mov (sp)+, r1
            rts pc

