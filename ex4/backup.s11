              beq keyStrFinish
              movb (r0), (r1)+
              inc r2
              tst (r0)+
              cmp (r0), #0
              beq keyStrFinish
              mov (r0), r0
              br keyStrPrcs

keyStrFinish: mov #'&, (r1)
